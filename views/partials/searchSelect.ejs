<div class="card container">
  <div class="card-body d-flex justify-content-between">
    <h3 class="text-center">All campgrounds:</h3>
    <form class="d-flex" action="/campgrounds" method="get">
      <strong class="fs-5 my-1">Sort by: &nbsp;&nbsp;&nbsp; </strong>

      <div class="w-50">
        <select class="form-select" name="sort">
          <option value="highest-rated" <% if (query.sort == "highest-rated") { %>selected<% } %>> Highest Rated</option>
          <option value="lowest-price" <% if (query.sort == "lowest-price") { %>selected<% } %>>Lowest Price</option>
          <option value="highest-price" <% if (query.sort == "highest-price") { %>selected<% } %>>Highest Price</option>
          <option value="newest" <% if (query.sort == "newest") { %>selected<% } %>>Newest</option>

        </select>
      </div>&nbsp;&nbsp;
      <button class="btn btn-outline-dark"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
          <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
        </svg></button>

    </form>
  </div>
</div>