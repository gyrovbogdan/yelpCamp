<script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU&amp;apikey=<%- process.env.YANDEX_API_KEY %>" type="text/javascript"></script>

<script>
  ymaps.ready(init);

  async function init() {
    var myMap = new ymaps.Map("map", {
      center: [<%- campground.location.pos %>],
      zoom: 10,
    });

    myMap.geoObjects.add(
      new ymaps.Placemark(
        [<%- campground.location.pos %>], {
          balloonContent: "<%- campground.title %> <strong><%- campground.location.name %></strong>",
        }, {
          preset: "islands#violetIcon",
          iconColor: "#3caa3c",
        }
      )
    );

    myMap.controls.remove('geolocationControl'); // удаляем геолокацию
    myMap.controls.remove('searchControl'); // удаляем поиск
    myMap.controls.remove('trafficControl'); // удаляем контроль трафика
    myMap.controls.remove('typeSelector'); // удаляем тип
    myMap.controls.remove('fullscreenControl'); // удаляем кнопку перехода в полноэкранный режим
    myMap.controls.remove('zoomControl'); // удаляем контрол зуммирования
    myMap.controls.remove('rulerControl'); // удаляем контрол правил

  }
</script>
<div class="card mb-2">
  <div id="map" style="height: 300px"></div>
</div>